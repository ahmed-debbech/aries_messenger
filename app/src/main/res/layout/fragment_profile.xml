<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/sidePhotoHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_marginTop="52dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/profile_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/profile_disp_name"
                android:layout_width="376dp"
                android:layout_height="57dp"
                android:layout_marginTop="28dp"
                android:fontFamily="sans-serif-condensed"
                android:text="disp_name"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/sidePhotoHolder"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="@+id/sidePhotoHolder"
                app:layout_constraintTop_toBottomOf="@+id/sidePhotoHolder" />

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="275dp"
                android:layout_height="31dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-condensed"
                android:text="usrname"
                android:textAlignment="center"
                android:textColor="@color/naturalText"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/profile_disp_name"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="@+id/profile_disp_name"
                app:layout_constraintTop_toBottomOf="@+id/profile_disp_name" />

            <TextView
                android:id="@+id/profile_numconnect"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:text="Your connections:"
                android:textColor="@color/naturalText"
                app:layout_constraintEnd_toEndOf="@+id/profile_username"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@+id/profile_username"
                app:layout_constraintTop_toBottomOf="@+id/profile_username" />

            <TextView
                android:id="@+id/profile_bio"
                android:layout_width="345dp"
                android:layout_height="82dp"
                android:layout_marginTop="40dp"
                android:text="BIO... this is my bio guys i am ahmed i created aries for fun."
                android:textColor="@color/naturalText"
                app:layout_constraintEnd_toEndOf="@+id/profile_numconnect"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="@+id/profile_numconnect"
                app:layout_constraintTop_toBottomOf="@+id/profile_numconnect" />

            <Button
                android:id="@+id/profile_editDispName"
                android:layout_width="374dp"
                android:layout_height="47dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/rounded_corners"
                android:fontFamily="sans-serif"
                android:text="@string/but_edit_disp_name"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/profile_bio"
                app:layout_constraintHorizontal_bias="0.483"
                app:layout_constraintStart_toStartOf="@+id/profile_bio"
                app:layout_constraintTop_toBottomOf="@+id/profile_bio" />

            <Button
                android:id="@+id/profile_editBio"
                android:layout_width="374dp"
                android:layout_height="47dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_corners"
                android:fontFamily="sans-serif"
                android:text="@string/but_edit_bio"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/profile_editDispName"
                app:layout_constraintStart_toStartOf="@+id/profile_editDispName"
                app:layout_constraintTop_toBottomOf="@+id/profile_editDispName" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</ScrollView>