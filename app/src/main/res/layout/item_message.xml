<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/msg_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_weight="8"
    app:cardBackgroundColor="@color/sender_message"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/msg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="rvefjpueijcriuejcuijnerfciluesrfuieshrnlusrefvuwiernhcjserlvcesriuln;vweurignf;oeurjf;iuewi;wergferfwerfwerfewrgfwergfergfhewurfnwerferfwerferojfiuweorjuifwehjrgfiuwlerfilhlhnfiuwerhfliweuhrfiluwerfhniluwerfhweirf"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/msg_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/msg_date"
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:layout_marginStart="6dp"
            android:text="20:40"
            android:textColor="@color/naturalText"
            android:textSize="7sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/msg_status"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.944" />

        <TextView
            android:id="@+id/msg_status"
            android:layout_width="24dp"
            android:layout_height="10dp"
            android:layout_marginStart="304dp"
            android:text="seen"
            android:textColor="@color/naturalText"
            android:textSize="7sp"
            app:layout_constraintBottom_toBottomOf="@+id/msg_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/msg_date"
            app:layout_constraintVertical_bias="0.0" />
