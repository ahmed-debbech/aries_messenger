<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ahmeddebbech.aries_messenger">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".util.CoreApplication"
        android:label="Aries Messenger"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ahmeddebbech.aries_messenger.views.activities.AboutActivity"
            android:label="@string/title_activity_about" />
        <activity
            android:name="com.ahmeddebbech.aries_messenger.views.activities.FeedbackActivity"
            android:label="@string/title_activity_feedback" />
        <activity
            android:name="com.ahmeddebbech.aries_messenger.views.activities.BlockedActivity"
            android:label="@string/title_activity_blocked" />
        <activity
            android:name="com.ahmeddebbech.aries_messenger.views.activities.ConversationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.ahmeddebbech.aries_messenger.views.activities.RequestsActivity" />
        <activity android:name="com.ahmeddebbech.aries_messenger.views.activities.ContactProfile" />
        <activity
            android:name="com.ahmeddebbech.aries_messenger.views.activities.SearchActivity"
            android:label="@string/title_search_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ahmeddebbech.aries_messenger.views.activities.EditBioActivity"
            android:label="@string/title_activity_edit_bio" />
        <activity
            android:name="com.ahmeddebbech.aries_messenger.views.activities.EditDispNameActivity"
            android:label="@string/title_activity_edit_disp_name" />
        <activity
            android:name="com.ahmeddebbech.aries_messenger.views.activities.RegisterActivity"
            android:label="Register for Aries"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ahmeddebbech.aries_messenger.views.activities.LoginActivity"
            android:label="Aries Messenger"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ahmeddebbech.aries_messenger.views.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>